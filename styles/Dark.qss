* {
    font-family: Arial, sans-serif;
    background-color: #333333;
    font-size: 14px;
    color: whitesmoke;
}

QPushButton {
    background-color: #5c328b;
    color: white;
    border: none;
    padding: 5px 10px;
    font-size: 16px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #6c3ba5;
}

QListWidget {
    background-color: #222222;
    font-size: 14px;
    margin: auto;
}

QTextEdit, QLineEdit {
    background-color: #202020; 
    color: #fffcf6; 
    border: 1px solid black;
    border-radius: 5px;
    font-family: monospace
}
